---
import Layout from './Layout.astro'
import Button from '@/components/ui/Button.astro'
---

<Layout>
  <div class='py-3'>
    <div class='flex items-center gap-2'>
      <Button onclick='history.back()'> &larr; </Button>
      <h1 class='text-2xl font-bold md:text-4xl'>Bubble Sort Visualization</h1>
    </div>
    <p class='mt-2 text-black/60'>
      Dive into the inner workings of your favorite algorithms.
    </p>
  </div>

  <div class='py-3'>
    <slot />
  </div>
  <div class='flex justify-between gap-3 py-3 md:justify-start'>
    <Button id='reset'> Reset </Button>

    <Button id='start-visualization'> Start Visualization </Button>
    <label
      for='speed'
      class='flex min-w-24 items-center justify-center rounded border border-black bg-white px-4 py-2 text-sm font-medium text-black'
    >
      <span id='speed-value'>100</span> ms
    </label>
  </div>
  <!-- velozidad del algoritmo -->
  <div>
    <input
      type='range'
      name='speed'
      id='speed'
      min='10'
      max='500'
      value='100'
    />
  </div>
</Layout>

<style is:inline>
  input[type='range'] {
    -webkit-appearance: none;
    width: 100%;
    height: 8px;
    border-radius: 4px;
    background: #fff;
    outline: none;
    border: 1px solid #000;
    transition: opacity 0.2s;
  }
  input[type='range']:hover {
    opacity: 1;
  }
  input[type='range']::-webkit-slider-thumb {
    -webkit-appearance: none;
    appearance: none;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background: #000000;
    cursor: pointer;
  }
  input[type='range']::-moz-range-thumb {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background: #4b5563;
    cursor: pointer;
  }
</style>
