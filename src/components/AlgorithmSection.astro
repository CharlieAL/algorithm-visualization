---
const { title, description, timeComplexity, spaceComplexity, slug } =
  Astro.props
---

<div class='flex min-h-screen flex-col'>
  <main class='container mx-auto flex-grow space-y-5 px-4 py-8 sm:px-6 lg:px-8'>
    <header>
      <h2 class='text-4xl font-bold tracking-tight sm:text-5xl'>{title}</h2>
      <p class='mt-4 text-gray-600'>
        {description || 'Explore various algorithms in this section.'}
      </p>
    </header>
    <article
      class='rounded border border-black bg-transparent p-6 transition-all duration-300 hover:-translate-x-[4px] hover:-translate-y-[4px] hover:shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]'
    >
      <h2 class='text-2xl font-bold text-gray-700'>Description</h2>
      <div class='text-gray-700'>
        <slot />
      </div>
    </article>
    <article
      class='rounded border border-black bg-transparent p-6 transition-all duration-300 hover:-translate-x-[4px] hover:-translate-y-[4px] hover:shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]'
    >
      <h2 class='text-2xl font-bold text-gray-700'>Complexity Analysis</h2>
      <div class='mt-6 flow-root'>
        <div class='-my-4 divide-y divide-gray-300'>
          <div class='flex flex-wrap items-center justify-between'>
            <p class='text-sm font-medium text-gray-600'>
              Time Complexity (Best, Average, Worst)
            </p>
            <p
              class='rounded bg-rose-200 px-2 py-1 font-mono text-sm font-medium text-rose-500'
            >
              {timeComplexity}
            </p>
          </div>
          <div class='flex flex-wrap items-center justify-between py-4'>
            <p class='text-sm font-medium text-gray-600'>Space Complexity</p>
            <p
              class='rounded bg-rose-200 px-2 py-1 font-mono text-sm font-medium text-rose-500'
            >
              {spaceComplexity}
            </p>
          </div>
        </div>
      </div>
    </article>
    <footer class='mt-8 flex items-center justify-between'>
      <a
        href='/'
        class='cursor-pointer rounded border border-black bg-white px-4 py-2 text-sm font-medium transition-all hover:-translate-x-[4px] hover:-translate-y-[4px] hover:shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] active:-translate-x-[0px] active:-translate-y-[0px] active:shadow-[0px_0px_0px_0px_rgba(0,0,0,1)]'
        >← Back to Home</a
      >
      <a
        href={`/visualize/${slug}`}
        class='cursor-pointer rounded border border-black bg-white px-4 py-2 text-sm font-medium text-black transition-all hover:-translate-x-[4px] hover:-translate-y-[4px] hover:shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] active:-translate-x-[0px] active:-translate-y-[0px] active:shadow-[0px_0px_0px_0px_rgba(0,0,0,1)]'
      >
        Visualize Algorithm →
      </a>
    </footer>
  </main>
</div>
